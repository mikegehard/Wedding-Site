<h1>Listing rsvps</h1>

<table>
  <tr>
    <th>Names</th>
    <th>Attending</th>
    <th>Level of participation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rsvps.each do |rsvp| %>
  <tr>
    <td><%= rsvp.names %></td>
    <td><%= rsvp.attending %></td>
    <td><%= rsvp.level_of_participation %></td>
    <td><%= link_to 'Show', rsvp %></td>
    <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
    <td><%= link_to 'Destroy', rsvp, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

